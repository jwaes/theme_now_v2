<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="posts_loop" inherit_id="website_blog.posts_loop">
        <xpath expr="//article//div[hasclass('o_record_cover_container')]" position="attributes">
            <attribute name="class" separator=" " remove="rounded shadow " />
        </xpath>
    </template>

    <template id="post_info" inherit_id="website_blog.post_info">
        <xpath expr="//time" position="attributes">
            <attribute name="class" separator=" " add="d-none" />
        </xpath>
    </template>    

</odoo>