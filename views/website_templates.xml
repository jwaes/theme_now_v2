        <xpath expr="//i" position="attributes">
            <attribute name="class" separator=" " add="fa-bag-shopping" remove="fa-shopping-cart" />
        </xpath>
    </template> -->

    <template id="user_dropdown" inherit_id="portal.user_dropdown">
        <xpath expr="//li/a/div/i" position="attributes">
            <attribute name="class" separator=" " add="fa-circle-user" remove="fa-user" />
        </xpath>
    </template>    

</odoo>